# PolySynergy API Local - Local Development Environment
DATABASE_URL=postgresql://polysynergy_user:securepassword@db:5432/polysynergy_db
REDIS_URL=redis://redis:6379
CORS_ORIGINS=https://portal.polysynergy.dev,https://api.polysynergy.dev

# AWS Configuration (for local development)
# You can use localstack or real AWS credentials
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=your-aws-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Cognito Configuration for local development
NEXT_PUBLIC_AWS_COGNITO_AUTHORITY=https://cognito-idp.eu-central-1.amazonaws.com/your-user-pool-id
NEXT_PUBLIC_AWS_COGNITO_DOMAIN=your-domain.auth.eu-central-1.amazoncognito.com
NEXT_PUBLIC_AWS_COGNITO_CLIENT_ID=your-client-id
NEXT_PUBLIC_AWS_COGNITO_LOGOUT_URL=https://portal.polysynergy.dev/logout
NEXT_PUBLIC_AWS_COGNITO_REDIRECT_URL=https://portal.polysynergy.dev/callback

# WebSocket URL
WEBSOCKET_URL=wss://api.polysynergy.dev

# Local development settings
DEBUG=true
LOG_LEVEL=DEBUG

# PubNub (if needed for real-time features)
PUBNUB_PUBLISH_KEY=your-pubnub-publish-key
PUBNUB_SUBSCRIBE_KEY=your-pubnub-subscribe-key